@{
    ViewBag.Title = "Home - Deen Essentials";
}

<!-- Add Bootstrap CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">

<!-- Link to your custom CSS file -->
<link rel="stylesheet" href="~/css/site.css">

<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <!-- Carousel Slides -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/attar.jpg" class="d-block w-100" alt="Slide 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Welcome to Deen Essentials</h5>
                    <p>Discover our premium collection of Islamic products.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/kiffaya.jpg" class="d-block w-100" alt="Slide 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>High-Quality Products</h5>
                    <p>Shop with confidence for the best Islamic essentials.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/tasbih.jpg" class="d-block w-100" alt="Slide 3">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Fast Delivery</h5>
                    <p>Get your orders delivered quickly and securely.</p>
                </div>
            </div>
        </div>

        <!-- Carousel Controls -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="olContent f1"><h2>Search Product/Category</h2></div>
<div class="olSearch fr">
    <input type="text" placeholder="Enter Keyword" name="searchKey" class="inputComn houseText form-control" />
</div>

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Our Products <small>trends products</small></h2>
        </div>
    </div>
</div>

<!-- Product Grid -->
<div class="row">
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="thumbnail product-item">
            <img src="~/Images/attar2.jpg" alt="Product 1" />
            <div class="caption">
                <h5>Black Ferrari</h5>
                <p>500.00 ৳.</p>
                <p>Available</p>
                <div class="product-item-badge">New</div>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="thumbnail product-item">
            <img src="~/Images/attar3.jpg" alt="Product 2" />
            <div class="caption">
                <h5>White Oud</h5>
                <p>500.00 ৳.</p>
                <p>Available</p>
                <div class="product-item-badge">New</div>
            </div>
        </div>
    </div>

    <!-- Add more product items as needed -->
</div>

<!-- Add Bootstrap and jQuery Scripts -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
}