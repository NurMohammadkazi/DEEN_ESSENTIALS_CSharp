<!-- Featured Products Section -->
<div class="container mb-5" id="featured-products">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center mb-5">
                <h2 class="display-4">Our Products</h2>
                <p class="lead">Trending products you'll love</p>
            </div>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card product-item shadow-sm">
                        <div class="position-relative">
                            <img src="@product.ImagePath" class="card-img-top" alt="@product.ProductName">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text text-muted">@product.ProductDescription</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price font-weight-bold">@product.ProductPrice.ToString("C")</span>
                                <span class="badge @(product.ProductStock > 0 ? "badge-success" : "badge-danger")">
                                    @(product.ProductStock > 0 ? "Available" : "Out of Stock")
                                </span>
                            </div>

                            <!-- ✅ Fix: Add Quantity Input -->
                            <div class="mt-2">
                                <label for="quantity-@product.Id">Quantity:</label>
                                <input type="number" id="quantity-@product.Id" class="form-control" value="1" min="1" max="@product.ProductStock" />
                            </div>

                            <div class="mt-3">
                                <a href="#" class="btn btn-primary add-to-cart" data-productid="@product.Id">
                                    <i class="fas fa-shopping-cart"></i> Add to Cart
                                </a>

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12 text-center">
                <p class="lead text-muted">No products available at the moment. Check back later!</p>
            </div>
        }
    </div>


    <div class="text-center mt-4">
        <a href="#" class="btn btn-outline-primary btn-lg">View All Products</a>
    </div>
</div>



