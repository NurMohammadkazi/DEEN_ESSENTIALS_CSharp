@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> Your Shopping Cart</h2>

    @if (Model.Any())
    {
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Product</th>
                    <th>Image</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>
                            <img src="@item.ImagePath" class="img-thumbnail" style="width: 60px; height: 60px;" />
                        </td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@(item.Price * item.Quantity)</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Remove
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-right">
            <a asp-controller="Checkout" asp-action="Index" class="btn btn-success btn-lg">
                <i class="fas fa-cash-register"></i> Proceed to Checkout
            </a>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="fas fa-shopping-cart"></i> Your cart is empty. Browse our <a asp-controller="Home" asp-action="Index" class="alert-link">products</a>.
        </div>
    }
</div>
