@model Deen_Essentials.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="EditProduct" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ProductCategory"></label>
        <input asp-for="ProductCategory" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ProductStock"></label>
        <input asp-for="ProductStock" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Upload New Image</label>
        <input type="file" class="form-control-file" name="newImage" />
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
</form>
