@model Deen_Essentials.Models.User
@{
    ViewData["Title"] = "User Login - Deen Essentials";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<style>
    .login-container {
        max-width: 500px;
        margin: 40px auto;
    }

    .card {
        border: none;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .card-header {
        background-color: #007bff;
        color: white;
        border-radius: 5px 5px 0 0;
    }

    .form-control:focus {
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .login-icon {
        width: 18px;
        text-align: center;
    }
</style>

<div class="container">
    <div class="login-container">
        <div class="card">
            <div class="card-header text-center">
                <h2><i class="fas fa-user-circle mr-2"></i>User Login</h2>
            </div>
            <div class="card-body">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label asp-for="Email">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
